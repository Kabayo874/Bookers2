<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<!-- userの編集権限を自分だけにする -->
<% if @user == current_user %>
  <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
<% else %>
  <%= link_to user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fa-solid fa-user-gear"></i>
<% end %>
<% end %>


<h2 class="pt-4">New book</h2>
<%= form_with model: book do |f| %>
  <div>
    <label for="title">Title</label>
    <%= f.text_field :title, placeholder:"Book title", id:"title", class: "form-control" %>
  </div>
  <div class="pt-2">
    <label for="opinion">Opinion</label>
    <%= f.text_area :body, placeholder:"Book opinion", id:"opinion", class: "form-control" %>
  </div>
  <div class="pt-2">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
<% end %>
