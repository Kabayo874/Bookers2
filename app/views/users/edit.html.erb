<h1>User info</h1>

<%= form_with model: @user do |f| %>
  <div>
    <label for="name">Name</label>
  </div>
  <div>
    <%= f.text_field :name, autofocus: true, id: "name", placeholder:"名前" %>
  </div>
  <div>
    <label for="image">Image</label>
  </div>
  <div>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像",id:"image", accept: "image/*" %>
  </div>
  <div>
    <label for="introduction">Introduction</label>
  </div>
  <div>
    <%= f.text_area :introduction, autofocus: true, id: "introduction", placeholder: "自己紹介" %>
  </div>
  <div>
    <%= f.submit "Update User" %>
  </div>
<% end %>
