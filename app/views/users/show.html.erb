

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/list', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <th>
                <%= link_to user_path(book.user.id) do %><%= image_tag book.user.get_profile_image(100,100) %><% end %>
              </th>
              <td class="text-break"><%= link_to book.title, book_path(book.id) %></td>
              <td class="text-break"><%= book.body %></td>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @books %>
      </div>
    </div>
  </div>
</div>