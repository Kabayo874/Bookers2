<%= render 'layouts/list', user: @user, book: @book %>



<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <th>
        <%= image_tag user.get_profile_image(100,100) %>
      </th>
      <th><%= user.name %></th>
      <th><%= link_to "Show", user_path(user.id) %></th>
      </th>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>