<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/list', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>

      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th>
              <%= link_to user_path(user.id) do %><%= image_tag user.get_profile_image(80,80) %><% end %>
            </th>
            <td class="text-break"><%= user.name %></td>
            <td class="text-break"><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>