<div class="container d-flex flex-column">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
      <h1>Editing Book</h1>

      <div>
        <%= form_with model: @book do |f| %>
          <div>
            <label for="title">Title</label><br>
            <%= f.text_field :title, autofocus: true, id:"title", class: "form-control" %>
          </div>
          <div class="pt-2">
            <label for="body">Opinion</label><br>
            <%= f.text_area :body, id:"body", class: "form-control" %>
          </div>
          <div class="pt-2">
            <%= f.submit "Update Book", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>

      <div class="pt-2">
        <p>
        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", books_path %>
        </p>
      </div>
    </div>
  </div>
</div>