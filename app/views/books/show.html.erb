<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/list', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= link_to @book.user.name, user_path(@book.user.id) %>
            </td>
            <td class="text-break"><%= link_to @book.title, book_path(@book.id) %></td>
            <td class="text-break"><%= @book.body %></th>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
              <td>
                <%= link_to "Destroy", book_path(@book.id), method: :delete, "deta-confirm" => "本当に消しますか？", class: "btn btn-danger btn-sm" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>