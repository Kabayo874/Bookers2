<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>




<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <th>
        <%= image_tag @book.user.get_profile_image(100,100) %><br>
        <%= link_to @book.user.name, book_path(@book.id) %>
      </th>
      <th><%= @book.title %></th>
      <th><%= @book.body %></th>
      <% if @book.user == current_user %>
        <th><%= link_to "Edit", book_path(@book.id) %></th>
        <th>
          <%= link_to "Destroy", book_path(@book.id), method: :delete, "deta-confirm" => "本当に消しますか？" %>
        </th>
      <% end %>
    </tr>
  </tbody>
</table>